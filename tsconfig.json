{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "infrad-pro-layout": ["./packages/layout/src/index.tsx"],
      "infrad-pro-form": ["./packages/form/src/index.tsx"],
      "infrad-pro-table": ["./packages/table/src/index.tsx"],
      "infrad-pro-field": ["./packages/field/src/index.tsx"],
      "infrad-pro-skeleton": ["./packages/skeleton/src/index.tsx"],
      "infrad-pro-list": ["./packages/list/src/index.tsx"],
      "infrad-pro-provider": ["./packages/provider/src/index.tsx"],
      "infrad-pro-descriptions": ["./packages/descriptions/src/index.tsx"],
      "infrad-pro-utils": ["./packages/utils/src/index.tsx"],
      "infrad-pro-card": ["./packages/card/src/index.tsx"],
      "infrad-pro-header": ["./packages/header/src/index.tsx"]
    }
  },
  "include": [
    "typings.d.ts",
    "**/src/**/*",
    "**/docs/**/*",
    "scripts/**/*",
    "**/demos",
    ".eslintrc.js",
    "tests",
    "jest.config.js",
    "**/fixtures",
    "./tests/no-duplicated.ts"
    // "packages/descriptions/src/demos/.tsx"
  ],
  "plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }]
}
